<div class="search-body">
  <div class="search-card">
    <h1 class="search-title">Community</h1>

    <div class="container mb-4">

      <%= render "shared/searchbar" %>
      <div class="mt-3">
        <% @ideas.each do |idea| %>
          <%= link_to chatroom_path(Chatroom.find_by(idea_id: idea.id).id) do %>
            <div class="card-idea mb-3">
                <%= image_tag idea.photo %>
                <div class="card-idea-infos">
                  <h2><%= idea.title %></h2>
                  <p><%= idea.content %></p>
                </div>
            </div>
          <% end %>
        <% end %>
      </div>

    </div>

  </div>
</div>
